<odoo>
  <data>
    <record id="sale_create_project_form" model="ir.ui.view">
        <field name="name">sale.create.project.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_project_sale_confirm" 
                        type="object" 
                        class="oe_highlight"
                        string="Create Project"
                        attrs="{'invisible': ['|', ('has_project', '=', True), ('state', 'not in', ('sale'))]}"
                />
            </xpath>
            <xpath expr="//sheet/group/group/field[@name='payment_term_id']" position="after">
                <field name="create_project" widget="radio" options="{'horizontal': true}" attrs="{'invisible': ['|', ('state', 'not in', ('sale')), ('has_project', '=', True)]}"/>
            </xpath>
            <xpath expr="//sheet/group/group/field[@name='payment_term_id']" position="after">
                <!--<field name='project_template' options="{'no_create': True, 'no_create_edit':True}"/>-->
                <field name="has_project" invisible='1'/>
            </xpath>
            <xpath expr="//sheet/group" position="after">
                <group>
                    <field name='description' string="Description : "/>
                </group>
            </xpath>
        </field>
      </record>
  </data>
</odoo>